{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "MICROCMS_SERVICE_DOMAIN",
        "MICROCMS_API_KEY",
        "BASE_URL",
        "DISABLE_CMS"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**"
            ],
            "env": [
                "MICROCMS_SERVICE_DOMAIN",
                "MICROCMS_API_KEY",
                "BASE_URL",
                "DISABLE_CMS"
            ]
        },
        "dev": {
            "cache": false,
            "env": [
                "MICROCMS_SERVICE_DOMAIN",
                "MICROCMS_API_KEY",
                "BASE_URL",
                "DISABLE_CMS"
            ]
        },
        "docs": {
            "outputs": []
        }
    }
}