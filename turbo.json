{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_CMS_BASE_URL",
    "CMS_API_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "env": ["NEXT_PUBLIC_CMS_BASE_URL", "CMS_API_TOKEN"]
    },
    "dev": {
      "cache": false,
      "env": ["NEXT_PUBLIC_CMS_BASE_URL", "CMS_API_TOKEN"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    }
  }
}
